enum UserRole {
  SUPER_ADMIN
  ADMIN
  ORGANIZER
  ATTENDEE
}

enum UserStatus {
  ACTIVE
  BLOCKED
  DELETED
}

enum Gender {
  MALE
  FEMALE
  OTHERS
}

enum EventStatus {
  UPCOMING
  ONGOING
  ENDED
}

enum EventType {
  CONCERT
  CONFERENCE
}
